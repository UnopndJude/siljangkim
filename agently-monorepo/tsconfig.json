{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@agently/domain": ["./packages/domain/src"],
      "@agently/domain/*": ["./packages/domain/src/*"],
      "@agently/application": ["./packages/application/src"],
      "@agently/application/*": ["./packages/application/src/*"],
      "@agently/infrastructure": ["./packages/infrastructure/src"],
      "@agently/infrastructure/*": ["./packages/infrastructure/src/*"]
    }
  },
  "include": [
    "apps/*/src/**/*",
    "packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "apps/*/node_modules",
    "packages/*/node_modules",
    "apps/*/.next",
    "apps/*/dist"
  ]
}